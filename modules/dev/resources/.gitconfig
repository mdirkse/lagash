[user]
  name  = Maarten Dirkse
  email = maarten.dirkse@gmail.com

[alias]
  co   = checkout
  st   = status -sb
  ls   = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll   = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  lds  = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  ds   = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short

[branch]
  autosetuprebase = always

[branch "*branch-name*"]
  rebase = true

[core]
  editor = nano
  pager = delta

[delta]
    navigate = true

[http]
  sslVerify = true

[interactive]
    diffFilter = delta --color-only

[push]
  default = simple

[include]
    path = ~/Work/.gitconfig-work
