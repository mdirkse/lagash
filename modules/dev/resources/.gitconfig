[user]
  name  = Maarten Dirkse
  email = maarten.dirkse@gmail.com
[core]
  editor = nano
[alias]
  co   = checkout
  st   = status -sb
  ls   = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll   = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  lds  = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  ds   = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
[branch]
  autosetuprebase = always
[http]
  sslVerify = true
[branch "*branch-name*"]
  rebase = true
[push]
  default = simple
[diff]
  external = difft

[include]
    path = ~/Work/.gitconfig-work
